<h1>Lista de articulos</h1>
<%= link_to 'Crear un nuevo articulo', new_article_path %> 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td> 
      <td><%= article.text %></td> 
      <td><%= link_to 'Ver articulo', article_path(article) %></td>
      <td><%= link_to 'Editar articulo', edit_article_path(article) %></td>
      <td><%= link_to 'Borrar articulo', article_path(article),
              method: :delete,
              data: { confirm: 'Estas seguro?' } %></td>

    </tr>

  <% end %>
</table> </br>
<%= link_to 'Volver a la pagina principal', welcome_index_path %> 